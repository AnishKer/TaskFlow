// Prisma schema for users and tasks

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  role     String
  tasks    Task[]
}

model Task {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  ownerId     Int
  owner       User   @relation(fields: [ownerId], references: [id])
}
